@inherits LayoutComponentBase

@inject IJwtAuthService AuthService
@inject NavigationManager Navigation

<CascadingAuthenticationState>
    <div class="page">
        <div class="sidebar">
            <NavMenu/>
        </div>
    
        <main>
            <div class="top-row px-4">
                <AuthorizeView>
                    <Authorized>
                        <NavLink class="nav-link" href="@ChangePasswordPage.Path" @onclick="RedirectToChangePassword">Change password</NavLink>
                        <NavLink class="nav-link" href="login" @onclick="async () => await AuthService!.Logout()">Log out</NavLink>
                    </Authorized>
                    <NotAuthorized>
                        <NavLink class="nav-link" href="@RegistrationPage.Path">Register</NavLink>
                        <NavLink class="nav-link" href="@LoginPage.Path">Log in</NavLink>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
</CascadingAuthenticationState>

@code {

    public void RedirectToChangePassword()
    {
        Navigation!.NavigateTo(ChangePasswordPage.Path);
    }
}