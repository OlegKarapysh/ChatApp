@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @Value</p>

<button class="btn btn-primary" @onclick="Act">Click me</button>

@code {

    public int Count { get; set; } = 1;
    [CascadingParameter]
    protected Task<AuthenticationState> AuthStateTask { get; set; } = default!;
    protected string Value { get; set; } = "Def";

    private async Task Act()
    {
        var authState = await AuthStateTask;
        Value = string.Join("\n", authState.User.Claims.Select(c => c.ToString()));
    }
}
